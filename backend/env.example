# Database (SQLite-first for local dev)
DATABASE_URL=sqlite:///./aegisflood.db

# Optional: Postgres/PostGIS (if you run via docker-compose)
# DATABASE_URL=postgresql+psycopg2://postgres:password@localhost:5432/aegisflood_mvp

# JWT
JWT_SECRET=change_me_in_production_at_least_256_bits
JWT_EXPIRE_HOURS=24

# Admin login (for /auth/admin/login)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# CORS
FRONTEND_ORIGIN=http://localhost:5173

# SMS Integration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# WhatsApp Integration (Twilio WhatsApp Business API)
TWILIO_WHATSAPP_PHONE_NUMBER=whatsapp:your_whatsapp_phone_number_here

# Optional: Mock SMS/WhatsApp for development
MOCK_SMS_ENABLED=true
MOCK_WHATSAPP_ENABLED=true




